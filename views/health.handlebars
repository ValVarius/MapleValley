                                <label class="label has-text-centered">Wears Glasses or Contact Lens</label>
                                <div class="field-body">
                                    <div class="field is-grouped is-grouped-centered">
                                        <div class="control">
                                            <label class="radio">
                                                <input type="radio" name="ohc_vision_impairment" value="yes">
                                                Yes
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="ohc_vision_impairment" value="no">
                                                No
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <label class="label">If you answered yes to any of the above please explain:</label>
                    <textarea class="textarea" name="ohc_detail"
                        placeholder="Other Health Concerns information"></textarea>
                </div>
            </div>


            {{#unless volunteer}}
            {{> medication/medications-block volunteer=false}}
            {{/unless}}

            {{#if volunteer}}
            {{> medication/medications-block volunteer=true}}
            {{/if}}
        </div>
        <div class="column is-1"></div>
    </div>

</form>