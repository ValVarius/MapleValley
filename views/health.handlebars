                        <div class="container column is-one-quarter">
                            <div class="field">
                                <label class="label has-text-centered">Sleep Disturbances</label>
                                <div class="field-body">
                                    <div class="field is-grouped is-grouped-centered">
                                        <div class="control">
                                            <label class="radio">
                                                <input type="radio" name="ohc_sleep_disturbances" value="yes">
                                                Yes
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="ohc_sleep_disturbances" value="no">
                                                No
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label has-text-centered">Special Diet Regime</label>
                                <div class="field-body">
                                    <div class="field is-grouped is-grouped-centered">
                                        <div class="control">
                                            <label class="radio">
                                                <input type="radio" name="ohc_special_diet_regime" value="yes">
                                                Yes
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="ohc_special_diet_regime" value="no">
                                                No
