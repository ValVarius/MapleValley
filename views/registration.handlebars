<form action="/api.registration/register/:{{regRole}}" method="post">

    <div class="field columns">
        <div class="column is-1"></div>
        <div class="field-body column">
            </br>
            <div class="box">
                <h1 class="title has-text-centered">Registration</h1>
            </div>
            <div class="box">
                <div class="columns">
                    <div class="column is-2">
                        <label class="label">First Name</label>
                        <div class="field">
                            <p class="control is-expanded">
                                <input class="input" name="first_name" type="text" placeholder="Jane">
                            </p>
                        </div>
                    </div>
                    <div class="column is-2">
                        <label class="label">Last Name</label>
                        <div class="field">
                            <p class="control is-expanded">
                                <input class="input" name="last_name" type="text" placeholder="Doe">
                        </div>
                    </div>
                </div>
                <div class="columns">
                    <div class="field column is-2">
                        <label class="label">Cell Number</label>
                        <div class="field-body">
                            <div class="field is-expanded">
                                <div class="field has-addons">
                                    <p class="control is-expanded">
                                        <input class="input" name="phone_cell" type="tel" placeholder="(999) 999-9999">
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field columns">
                    <div class="column is-3">
                        <label class="label">Address</label>
                        <div class="field-body">
                            <div class="field is-expanded">
                                <div class="field has-addons">
                                    <p class="control is-expanded">
                                        <input class="input" name="address_street" type="text"
                                            placeholder="12345 Imaginary Rd">
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field columns">
                    <div class="column is-2">
                        <label class="label">City</label>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded">
                                    <input class="input" name="address_city" type="text" placeholder="Seattle">
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="column is-2">
                        <label class="label">State</label>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded">
                                    <input class="input" name="address_state" type="text" placeholder="Washington">
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="column is-1">
                        <label class="label">Zip Code</label>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded">
                                    <input class="input" name="address_zip" type="text" placeholder="99999">
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <label class="label">Birth date</label>
